{
  "compilerOptions": {
    "types": ["node"],              // keep only node
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
